package com.flipbox.myevent;

import java.util.Calendar;
import java.util.Date;
import java.util.List;

import twitter4j.Status;

import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.BaseAdapter;
import android.widget.TextView;

public class TwitterAdapter extends BaseAdapter {

	private List<Status> listOfStatus;
	private LayoutInflater inflater;

	public TwitterAdapter(List<Status> listOfStatus) {
		this.listOfStatus = listOfStatus;
	}

	public int getCount() {

		return listOfStatus.size();
	}

	public Object getItem(int position) {
		Status s = listOfStatus.get(position);

		return s;
	}

	public long getItemId(int position) {
		Status s = listOfStatus.get(position);

		return s.getId();
	}

	public View getView(int position, View convertView, ViewGroup parent) {
		View v;
		if (convertView == null) {
			convertView = inflater.inflate(R.layout.list_twitter_item, parent,
					false);
		}
		v = convertView;

		TextView screenNameTv = (TextView) v.findViewById(R.id.screen_name);
		TextView elapsedTimeTv = (TextView) v
				.findViewById(R.id.tweet_elapsed_time);
		TextView tweetTv = (TextView) v.findViewById(R.id.tweet_text);

		Status status = listOfStatus.get(position);
		screenNameTv.setText("@" + status.getUser().getScreenName());
		elapsedTimeTv.setText("");
		tweetTv.setText(status.getText());

		return v;
	}

	private String getElapsedTime(Date time) {
		String elapsedTime = "";
		Date currentTime = new Date(System.currentTimeMillis()); 
		int passedTime;
		
		int cYear = currentTime.getYear();
		int cMonth = currentTime.getMonth();
		int cDate = currentTime.getDate();
		
		
		int pDate = time.getDate();
		if(cDate > pDate){
			passedTime = cDate - pDate;
			elapsedTime = passedTime + " days";
		} else if
		
		return elapsedTime;
	}

}
