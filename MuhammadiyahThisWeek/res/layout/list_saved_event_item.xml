<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="7dp" >

    <!-- event name -->

    <TextView
        android:id="@+id/saved_event_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"
        android:textStyle="bold" />

    <!-- Event regional -->

    <TextView
        android:id="@+id/saved_event_reg_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/saved_event_name"
        android:layout_below="@id/saved_event_name"
        android:paddingLeft="10dip"
        android:text="@string/location_lbl"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/saved_event_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saved_event_name"
        android:layout_toRightOf="@id/saved_event_reg_label" />

    <!-- Event date -->

    <TextView
        android:id="@+id/saved_event_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saved_event_reg"
        android:paddingLeft="10dip"
        android:text="@string/date_lbl"
        android:textColor="@drawable/date_label_text_clr"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/saved_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/saved_event_date_label"
        android:layout_below="@id/saved_event_reg"
        android:layout_toRightOf="@id/saved_event_date_label" />

</RelativeLayout>