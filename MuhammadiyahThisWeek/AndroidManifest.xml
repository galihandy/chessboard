<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flipbox.muhammadiyahthisweek"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".activity.SearchActivity" />

        <activity
            android:name="com.flipbox.muhammadiyahthisweek.activity.SplashscreenActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flipbox.muhammadiyahthisweek.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.flipbox.muhammadiyahthisweek.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.flipbox.muhammadiyahthisweek.fragment.FeaturedActivity"
            android:label="@string/title_activity_featured"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.flipbox.muhammadiyahthisweek.fragment.CategoryActivity"
            android:label="@string/title_activity_ticket"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.flipbox.muhammadiyahthisweek.fragment.SavedEventActivity"
            android:label="MyTicket"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.flipbox.muhammadiyahthisweek.activity.DetailEventActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.flipbox.muhammadiyahthisweek.activity.SearchResultActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.flipbox.muhammadiyahthisweek.activity.CategoryEventListActivity"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.flipbox.muhammadiyahthisweek.activity.RegionalEventListActivity"
            android:screenOrientation="portrait" >
        </activity>

        <receiver android:name=".service.AlarmReceiver" >
        </receiver>
    </application>

</manifest>